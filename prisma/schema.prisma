// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url = env("DATABASE_URL")
  relationMode = "prisma"
}

model Tag {
  tagId               Int @id @default(autoincrement())

  unversity           String
  appliedToChats      Chat[]

  // tag metadata
  tagName             String @unique
  tagDescription      String
}

model Chat {
  chatId              Int @id @default(autoincrement())
  university          String
  
  platform            String

  image               String
  totalMembers        Int
  capacity            Int
  
  tags                Tag[]

  owner               User @relation(fields: [ownerId], references: [userId])
  ownerId             Int @unique
}

model User {
  userId        Int @id @default(autoincrement())
  firstName     String
  lastName      String

  email         String @unique
  university    String

  profileImage  String?
  chatsOwned    Chat[]
}